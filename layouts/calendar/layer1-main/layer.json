{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0, 0, 0, 12",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Margin": "0, 0, 0, 8",
                //"Background": "{BackgroundDefault}",
                "Padding": "42, 16, 42, 16",
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "HorizontalAlignment": "Left",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Opacity" : 75,
                                "Source": "{Season.LeagueInfo.LeagueName}",
                                "FontName": "{FontNameWide}",
                                "FontSize": 20,
                                "Foreground": "{BlackText}"
                            },
                            {
                                "BlockType": "text",
                                "Source": " Â· {Season.Name}",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameWide}",
                                "FontSize": 16,
                                "Foreground": "{BlackText}"
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft": 36,
                        "MarginRight": 0,
                        "Height": 56,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },            

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "MarginRight": 0,                
                "TableOptions": {
                    "ItemsSource": "{Events.Events}",
                    "RowSpacing": 8,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //number
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 48,
                                "Source": "{Item.Position}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameDefault}",
                                "Foreground": "BlackText",
                                "FontSize": 20,
                                "Background": "{BackgroundDefault}",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                        "Property": "Foreground",
                                        "Value": "{WhiteText}"
                                    }
                                ]
                            }
                            
                        },

                        {
                            "Template": {
                                "BlockType": "stack",
                                "PaddingLeft": 32,
                                "PaddingRight": 4,
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "{BackgroundDefault}",
                                "Items": [
                                    //flag
                                    {
                                        "BlockType": "image",
                                        "Height": 56,
                                        //"Padding" : "0, 8",
                                        "PaddingTop": 8,
                                        "PaddingBottom": 8,
                                        "MarginRight": 20,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Track.Nation.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },

                                    //country
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Track.Nation.Code}",
                                        "HorizontalAlignment": "Left",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{FontNameDefault}",
                                        "Foreground": "BlackText",
                                        "FontSize": 20,
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                                "Property": "Foreground",
                                                "Value": "{WhiteText}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        },

                        //location
                        {
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 24,
                                "PaddingRight": 56,
                                "Source": "{Item.Track.CircuitFullName}",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameDefault}",
                                "Foreground": "{BlackText}",
                                "FontSize": 32,
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
                                    {
                                        "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                        "Property": "Foreground",
                                        "Value": "{WhiteText}"
                                    }
                                ]
                            }
                        },
                        {
                            "Template": {
                                "BlockType": "stack",
                                "PaddingLeft": 32,
                                "PaddingRight": 32,
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "{BackgroundDefault}",
                                "Items": [
                         //layout
                         {
                            "BlockType": "image",
                            "Height": 75,
                            //"Padding" : "0, 8",
                            "PaddingTop": 8,
                            "PaddingBottom": 8,
                            "MarginRight": 20,
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "images/layout/layout_{Item.Track.CircuitName}.png",
                                "VerticalAlignment": "Center"
                            }
                        }
                    ]
                }
            },

                        //date
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 48,
                                "PaddingRight": 48,
                                "Background": "#80FFE661",
                                "Source": "{Item.Date, Converter=DateToDayOfMonth} {Item.Date, Converter=DateToMonthInWords}",
                                "FontSize": 24,
                                "Foreground": "{BlackText}",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                        "Property": "Foreground",
                                        "Value": "{WhiteText}"
                                    }
                                ]
                            }
                        },

                        //description
                        {
                            "Template": {
                                "BlockType": "text",
                                "RenderIf": "{ShowEventDescriptionInCalendar}",
                                "MaxWidth": 480,
                                "PaddingLeft": 48,
                                "PaddingRight": 48,
                                "Source": "{Item.Description}",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameDefault}",
                                "Foreground": "{BlackText}",
                                "FontSize": 20,
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
                                    {
                                        "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                        "Property": "Foreground",
                                        "Value": "{WhiteText}"
                                    }
                                ]
                            }
                        },

                        //winner
                        {
                            "Template": {
                                "BlockType": "text",
                                "RenderIf": "{ShowWinnerInCalendar}",
                                "MaxWidth": 320,
                                "PaddingLeft": 48,
                                "PaddingRight": 48,
                                "Source": "{Item.WinnerString}",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameDefault}",
                                "Foreground": "{BlackText}",
                                "FontSize": 20,
                                "Background": "{BackgroundDefault}",
                                
                            }
                        }
                    ]
                }
            }
        ]
    }
}
